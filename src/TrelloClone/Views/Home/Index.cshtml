@model TrelloClone.ViewModels.BoardList;
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <h2>Boards</h2>
    <a asp-action="Create" asp-controller="Home" class="waves-effect waves-light btn bg-dark">
        Add New Board
    </a>

    </div>

    <div class="row">
        @foreach (var board in Model.Boards)
        {
            <div class="card s12">
                <div style="float: left; margin-right: 2em; width: 22em;">
                    <div class="card blue-grey darken-1 card-shadow">
                        <div class="card-content white-text bg-yellow ">
                            <span class="card-title">
                                @board.Title
                            </span>
                        </div>
                        <div class="card-action bg-yellow">
                            <a asp-action="Index" asp-controller="Board"
                               asp-route-id="@board.Id"
                               class="collection-item" style="color:white">View</a>
                            <div style="padding:15px"></div>
                            <form asp-action="DeleteBoard" asp-controller="Board" method="post">
                                <input type="hidden" value="@board.Id" name="id"/>
                                <button type="submit" class="text-btn">Delete Board</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


